<div class="row pd-top-2">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <form name="datepickerForm" class=" form-horizontal" role="form">
                    <div class="row col-md-12">
                        <div class="form-group ">
                            <label class="control-label col-md-2">时间</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" size="20" bs-datepicker
                                       data-date-format="yyyy-MM-dd" data-date-type="number"
                                       ng-model="vm.params.operateStart">
                            </div>
                            <label class="control-label col-md-1">至</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" size="20" bs-datepicker
                                       data-date-format="yyyy-MM-dd" data-date-type="number"
                                       ng-model="vm.params.operateEnd">
                            </div>
                        </div>
                        <div class="form-group ">
                            <label class="control-label col-md-2">角色</label>
                            <div class="col-md-3">


                                <select class="form-control" ng-model="vm.params.roleID">

                                    <option ng-repeat="role in vm.list" ng-value="role.roleID"
                                            ng-selected="vm.params.roleID == role.roleID">{{role.rolerName}}
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label class="control-label col-md-2">用户名</label>
                            <div class="col-lg-3">
                                <input type="text" class="form-control" ng-model="vm.params.managerName">
                            </div>
                            <label class="control-label col-md-2">操作内容</label>
                            <div class="col-lg-3">
                                <input type="text" class="form-control" ng-model="vm.params.operate">
                            </div>

                            <div class="col-md-2">
                                <button class="btn btn-primary pull-right" ng-click="vm.search()">查询</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                操作记录
            </div>
            <div class="panel-body">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th class="text-center">用户名</th>
                        <th class="text-center">角色</th>
                        <th class="text-center">时间</th>
                        <th class="text-center">操作记录</th>
                        <th class="text-center">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="li in vm.list">
                        <td class="text-center">{{li.managerName}}</td>
                        <td class="text-center">{{li.rolerName}}</td>
                        <td class="text-center">{{li.operateAt| date:'yyyy-MM-dd&nbspHH-mm-ss'}}</td>
                        <td class="text-center">{{li.moduleName}}</td>
                        <td class="text-center">
                            <button class="btn btn-default btn-xs" ng-if="globalPermission.updated" ui-sref="field.recordDetail({id:li.id})">查看</button>
                            <button class="btn btn-danger btn-xs" ng-if="globalPermission.deleted" ng-click="vm.del(li.id)">删除</button>
                        </td>
                    </tr>
                    </tbody>
                </table>

                <paging ng-if="vm.page" next="{{vm.page}}"></paging>

            </div>
        </div>
    </div>
</div>
